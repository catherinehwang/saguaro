<div class="home">
    <section class="module parallax parallax-1">
        <div class="container hero-unit">
            <%= form_tag("/food", id: "foodForm", remote: true, class: "form-horizontal", role: "form") do %>
                <div class="form-group">
                    <div class="input-group col-sm-12">
                        <div class="input-group-addon">$</div>
                        <%= text_field_tag("money", nil, class: "form-control", placeholder: "13.37", type: "number", step: "any", min: "0") %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group col-sm-12">
                        <%= select_tag("source", options_for_select(@sources), class: "form-control") %><br>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <%= submit_tag("Give me some Taco Bell", class: "btn btn-primary")%>
                    </div>
                </div>
            <% end %>

        </div>
    </section>

    <section class="module parallax parallax-2">
        <div class="container hero-unit floating-text">
            <div id="foodResult">
            </div>
        </div>
    </section>

</div>

<!-- Templates -->

<script id="calories-template" type="text/x-handlebars-template">
    <div id="totalCalories"><h1>{{calories}} calories</h1></div>
    <table id="foodContent">
        <tr>
            <th>Name</th>
            <th>Calories</th>
            <th>Price</th>
        </tr>
    </table>
</script>

<script id="food-template" type="text/x-handlebars-template">
    <tr>
        <td>{{ name }}</td>
        <td>{{ calories }}</td>
        <td>{{ price }}</td>
    </tr>
</script>
