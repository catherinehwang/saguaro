<div class="home">
    <section class="module parallax parallax-1">
        <div class="container">
            <%= form_tag("/food", id: "foodForm", remote: true, class: "form-horizontal", role: "form") do %>
                <div class="form-group">
                    <%= label_tag("money", nil, class: "col-sm-2 control-label")%>
                    <div class="col-sm-10">
                        <%= text_field_tag("money", nil, class: "form-control", placeholder: "Enter the amount of money you have.", type: "number", step: "any", min: "0") %>
                    </div>
                </div>
                <div class="form-group">
                    <%= label_tag("source", nil, class: "col-sm-2 control-label") %>
                    <div class="col-sm-10">
                        <%= select_tag("source", options_for_select(@sources), class: "form-control") %><br>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= submit_tag("Give me some Taco Bell", class: "btn btn-primary")%>
                    </div>
                </div>
            <% end %>

        </div>
    </section>

    <section class="module content">
        <div class="container">
            <p>First stuff</p>
            <div id="foodResult">
            </div>
        </div>
    </section>

    <section class="module parallax parallax-2">
    </section>

    <section class="module content">
        <div class="container">
            <p>Second stuff</p>
        </div>
    </section>
</div>

<!-- Templates -->

<script id="food-template" type="text/x-handlebars-template">
    <div id="totalCalories">{{calories}}</div>
    <div id="foodContent">{{foodQuantities}}</div>
</script>
